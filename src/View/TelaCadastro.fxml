<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.TelaCadastroController">
   <children>
      <TextField fx:id="labelNome" layoutX="226.0" layoutY="80.0" promptText="Nome" />
      <TextField fx:id="labelCpf" layoutX="226.0" layoutY="115.0" promptText="CPF" />
      <TextField fx:id="labelEmail" layoutX="226.0" layoutY="150.0" promptText="Email" />
      <TextField fx:id="labelSenha" layoutX="226.0" layoutY="185.0" promptText="Senha" />
      <TextField fx:id="labelMatricula" layoutX="226.0" layoutY="220.0" promptText="Matricula / Siape" />
      <Text layoutX="212.0" layoutY="272.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SELECIONE O TIPO DE USUARIO:" />
      <RadioButton fx:id="radioAluno" layoutX="107.0" layoutY="285.0" mnemonicParsing="false" selected="true" text="Aluno">
         <toggleGroup>
            <ToggleGroup fx:id="tipoUsuario" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="radioServidor" layoutX="257.0" layoutY="285.0" mnemonicParsing="false" text="Servidor" toggleGroup="$tipoUsuario" />
      <RadioButton fx:id="radioProfessor" layoutX="176.0" layoutY="285.0" mnemonicParsing="false" text="Professor" toggleGroup="$tipoUsuario" />
      <Button fx:id="butaoCadastro" layoutX="289.0" layoutY="331.0" mnemonicParsing="false" onAction="#fazerCadastro" style="-fx-background-color: darkblue; -fx-font-family: Cambria;" text="FAZER CADASTRO" textFill="WHITE" />
      <Label fx:id="nomeEvento" alignment="CENTER" contentDisplay="CENTER" prefHeight="66.0" prefWidth="600.0" style="-fx-background-color: darkblue;" text="Fazer cadastro" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="34.0" />
         </font>
      </Label>
      <RadioButton fx:id="radioOrientador" layoutX="413.0" layoutY="286.0" mnemonicParsing="false" text="Orientador" toggleGroup="$tipoUsuario" />
      <RadioButton fx:id="radioAvaliador" layoutX="331.0" layoutY="286.0" mnemonicParsing="false" text="Avaliador" toggleGroup="$tipoUsuario" />
      <Button fx:id="butaoCancelar" layoutX="196.0" layoutY="331.0" mnemonicParsing="false" onAction="#Cancelar" prefHeight="24.0" prefWidth="79.0" style="-fx-background-color: darkblue; -fx-font-family: Cambria;" text="CANCELAR" textFill="WHITE" />
   </children>
</AnchorPane>
